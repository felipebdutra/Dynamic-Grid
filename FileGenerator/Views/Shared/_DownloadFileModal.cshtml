<!-- Modal -->
<style>
    .icon-download{
        width: 60px;
        height:60px;
        cursor:pointer;
    }
</style>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalDownload">
    <span class="glyphicon glyphicon-download" aria-hidden="true"></span>&nbsp;&nbsp;Download
</button>

<div class="modal fade" id="modalDownload" tabindex="-1" role="dialog" aria-labelledby="modalDownload" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Choose the extension to export your data. "<i>Just JSON avaliable at the moment.</i>"</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" id="modalOkCancelText">
                <img src="~/Content/Images/json.png" class="icon-download" onclick="DonwloadFile(@FileGenerator.Enum.FileTypeEnum.JSON.GetHashCode())" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
